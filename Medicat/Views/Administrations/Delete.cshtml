@model Medicat.Models.Administration

@{
    ViewData["Title"] = "Delete";
}
@{
   var medicines = (IEnumerable<Medicine>)ViewData["Medicines"];
   var patients = (IEnumerable<Patient>)ViewData["Patients"];
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Delete Medication</h4>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="Id" />
        <dt>
            @Html.DisplayNameFor(model => model.PatientId)
        </dt>
        <dd>
           @patients.SingleOrDefault(x => x.Id == Model.PatientId)?.Name
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MedicineId)
        </dt>
        <dd>
           @medicines.SingleOrDefault(x => x.Id == Model.MedicineId)?.Name
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Dose)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Dose)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AdministrationDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AdministrationDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ApplicationUserId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplicationUserId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
